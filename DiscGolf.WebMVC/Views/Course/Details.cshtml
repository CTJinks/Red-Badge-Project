<h2 class="text-success text-center">@Html.DisplayFor(model => model.CourseName) Reviews</h2>
@using (Html.BeginForm("PostComment","Course", FormMethod.Post))
{
    <input type="text" name="CommentText" placeholder="Type new review"/>
    <br />
    <input type="submit" value="Post Comment" class="btn btn-success" />
}
@foreach (var comment in Model.Comments)
{
    <tr style="border:1px solid black">
        <td>
            <span>
                @Html.DisplayFor(modelItem => comment.Username)
            </span>
            <span>
                @Html.DisplayFor(modelItem => comment.Text)
            </span>
        </td>
    </tr>
}
